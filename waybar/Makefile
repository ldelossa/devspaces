include ../lib/defines

CONTAINER_NAME = waybar
CONTAINER_VERSION = 0.0.2
WORKING_DIR=$(HOME_PATH)/git/cpp/Waybar

.PHONY: $(CONTAINER_NAME) run

$(CONTAINER_NAME):
	$(LIB_BUILD_CONTAINER)

.SILENT:
run:
	$(LIB_BUILD_IF_REQUIRED)
	$(LIB_RUN_CONTAINER_AS_USER)
	$(LIB_EXEC_CONTAINER_WITH_WORKING_DIR)

