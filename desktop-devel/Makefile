include ../lib/defines

CONTAINER_NAME = desktop-devel
CONTAINER_VERSION = 0.0.1
WORKING_DIR = $(HOME_PATH)/git/gtk

.PHONY: $(CONTAINER_NAME) run

$(CONTAINER_NAME):
	$(LIB_BUILD_CONTAINER)

.SILENT:
run:
	$(LIB_BUILD_IF_REQUIRED)
	$(LIB_RUN_CONTAINER_AS_USER)
	$(LIB_EXEC_CONTAINER_WITH_WORKING_DIR)
